<% if logged_in? %>
    <%= render 'share/login_nav' %>
<% else %>
    <%= render 'share/nav' %>
<% end %>
<section class="container pt-5">
  <div class="row flex-row-reverse">
    <div class="col-lg-4 col-12 pt-lg-5" style="z-index: 1;">
        <div class="pt-lg-5" style="position:sticky;top:135px">
            <h5>CATEGORY</h5>
            <div class="mt-4 pb-4">
                <% @categories.each do |category| %>
                    <a href="/category/<%= category.name %>" class="border mb-2 me-1 rounded d-inline-block text-decoration-none px-2 px-md-3 py-2" style="color:rgba(117, 117, 117, 1);"><%= category.name %></a>
                <% end %>
            </div>
            <div class="d-lg-block d-none border-bottom">
                <p class="d-none"></p>
            </div>
            <div class="mt-4 d-none d-lg-block">
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Help</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Status</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Writers</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Blog</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Carrers</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Privacy</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Terms</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">About</a>
                <a class="text-decoration-none d-inline-block me-4 fs-6 mb-2" style="color:rgba(117, 117, 117, 1);" href="#">Text to speech</a>
            </div>
        </div>
    </div>
    <hr class="d-lg-none mb-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-7 col-12">
        <div class="d-flex pb-3 align-items-center border-bottom border-dark-50">
            <span class="px-1 pb-1 me-2 rounded-circle" style="background-color:rgb(237, 237, 237);"><svg width="21" height="21" class="uv"><path d="M4.66 8.72L3.43 9.95a1.75 1.75 0 0 0 0 2.48l5.14 5.13c.7.7 1.8.69 2.48 0l1.23-1.22 5.35-5.35a2 2 0 0 0 .51-1.36l-.32-4.29a2.42 2.42 0 0 0-2.15-2.14l-4.3-.33c-.43-.03-1.05.2-1.36.51l-.79.8-2.27 2.28-2.28 2.27zm9.83-.98a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5z" fill-rule="evenodd"></path></svg></span>
            <h1 class="m-0 fw-bolder"><%= @category.name %></h1>
        </div>
        <% @posts.each do |post| %>
        <div class="mt-5 mb-5">
            <div class="row">
                <div class="col-8">
                    <div class="d-flex justify-content-start align-items-center mb-0 mb-md-2">
                        <%= image_tag "image.jpg",height: 30, class:"rounded-circle" %>
                        <p class="fw-bold px-2 m-0"><%= post.user.name %></p>
                    </div>
                    <p class="fw-bold fs-5 fs-md-3"><%= post.title %></p>
                    <p class="fs-6 d-none d-md-block" style="color:rgba(117, 117, 117, 1);font-weight:500;"><%=raw post.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="align-items-end" style="color:rgba(117, 117, 117, 1);">
                            <span><%= time_ago_in_words(post.created_at) %></span> <span class="mx-1">.</span> <span>9 min read</span> <span class="mx-1">.</span> <a href="/category/<%= post.category.name %>" class="d-none text-decoration-none d-md-inline-block rounded-pill d-inline-block px-3 pb-1" style="background-color: rgba(242, 242, 242, 1);color:rgba(117, 117, 117, 1);"><%= post.category.name %></a>
                        </div>
                        <div class="fs-2 txt-color more-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="tz"><path d="M17.5 1.25a.5.5 0 0 1 1 0v2.5H21a.5.5 0 0 1 0 1h-2.5v2.5a.5.5 0 0 1-1 0v-2.5H15a.5.5 0 0 1 0-1h2.5v-2.5zm-11 4.5a1 1 0 0 1 1-1H11a.5.5 0 0 0 0-1H7.5a2 2 0 0 0-2 2v14a.5.5 0 0 0 .8.4l5.7-4.4 5.7 4.4a.5.5 0 0 0 .8-.4v-8.5a.5.5 0 0 0-1 0v7.48l-5.2-4a.5.5 0 0 0-.6 0l-5.2 4V5.75z" fill="#000"></path></svg>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <%= image_tag "one.png", class:"product-img img-fluid" %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</section>