<% if @user.errors.any? %>
    <% if @user.errors.include?(:image) %>
        $('#imageError').html("<%= @user.errors.full_messages_for(:image).each do |err| %><%= err %><% break %><% end %>")
    <% else %>
        $('#imageError').html("")
    <% end %>
    <% if @user.errors.include?(:name) %>
        $('#nameError').html("<%= @user.errors.full_messages_for(:name).each do |err| %><%= err %><% break %><% end %>")
    <% else %>
        $('#nameError').html("")
    <% end %>
    <% if @user.errors.include?(:bio) %>
        $('#bioError').html("<%= @user.errors.full_messages_for(:bio).each do |err| %><%= err %><% break %><% end %>")
    <% else %>
        $('#bioError').html("")
    <% end %>
<% end %>
