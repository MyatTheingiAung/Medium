<% if flash[:not_user] %>
    $('#oldPassword').html("<%= flash[:not_user] %>")
<% end %>
<% if @user.errors.any? %>  
    <% if @user.errors.include?(:password) %>
        $('#password').html("<%= @user.errors.full_messages_for(:password).each do |err| %><%= err %><% break %><% end %>")
    <% else %>
        $('#password').html("")
    <% end %>
    <% if @user.errors.include?(:password_confirmation) %>
        $('#passwordConfirmation').html("<%= @user.errors.full_messages_for(:password_confirmation).each do |err| %><%= err %><% break %><% end %>")
    <% else %>
        $('#passwordConfirmation').html("")
    <% end %>
<% end %>