<% if @user.errors.any? %>  
    <% if flash[:current] %>
        $('#oldPassword').html("<%= flash[:current] %>")
    <% end %>
    <% if flash[:not_user] %>
        $('#oldPassword').html("<%= flash[:not_user] %>")
    <% end %>
    <% if flash[:password] %>
        $('#password').html("<%= flash[:password] %>")
    <% end %>
    <% if flash[:password_confirmation] %>
        $('#passwordConfirmation').html("<%= flash[:password_confirmation] %>")
    <% end %>
    <% if flash[:unmatch_password] %>
        $('#passwordConfirmation').html("<%= flash[:unmatch_password] %>")
    <% end %>
<% else %>
<% end %>